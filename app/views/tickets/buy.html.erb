<h1><%= t('.title') %></h1>

<h2><%= t('tickets.show.information') %></h2>
<table class="table table-striped">
  <tbody>
  <tr>
    <th><%= t('tickets.attributes.train') %></th>
    <td><%= @ticket.train.number %></td>
  </tr>
  <tr>
    <th><%= t('tickets.attributes.route') %></th>
    <td><%= @ticket.train.route.name %></td>
  </tr>
  <tr>
    <th><%= t('tickets.attributes.start_station') %></th>
    <td><%= @ticket.start_station.title %></td>
  </tr>
  <tr>
    <th><%= t('tickets.attributes.end_station') %></th>
    <td><%= @ticket.end_station.title %></td>
  </tr>
  </tbody>
</table>

<h2><%= t('tickets.show.passenger_data') %></h2>
<div>
  <%= render 'common/errors', resource: @ticket %>
  <%= form_for(@ticket, html: {class: 'form-horizontal'}) do |f| %>
      <%= f.hidden_field :train_id %>
      <%= f.hidden_field :start_station_id %>
      <%= f.hidden_field :end_station_id %>

      <div class="form-group">
        <%= f.label :passenger_name, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :passenger_name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :passport_number, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :passport_number, class: 'col-sm-10 form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <%= f.submit t('.buy'), class: 'btn btn-primary' %>
        </div>
      </div>
  <% end %>
</div>
