<nav>
  <div class="container">
    <%= link_to 'Railway', root_path, class: 'project-name' %>

    <div class="auth-links">
      <% if user_signed_in? %>
          <span><%= "Hello, #{current_user.full_name}!" %></span> |
          <span><%= link_to 'My tickets', my_tickets_path %></span> |
          <% if current_user.admin? %>
              <span><%= link_to 'Admin panel', admin_dashboard_index_path %></span> |
          <% end %>
          <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
      <% else %>
          <%= link_to 'Log in', new_user_session_path %>
      <% end %>
    </div>
  </div>
</nav>
