<p id="notice"><%= notice %></p>

<h1>Train</h1>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>Route:</strong>
  <% if @train.route.present? %>
      <%= link_to @train.route.name, @train.route %>
  <% else %>
      not set
  <% end %>
</p>

<p>
  <strong>Wagons and Places count by Category:</strong>
  <ul>
    <% @train.capacity_by_categories.each do |key, row| %>
        <li>
          <strong><%= "#{Wagon::CATEGORIES[key]}: " %></strong>
          <ul>
            <li><%= "wagons - #{row[:wagons]}, " %></li>
            <li><%= "top places - #{row[:top_places]}, " %></li>
            <li><%= "bottom places - #{row[:bottom_places]}" %></li>
          </ul>
        </li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Current station:</strong>
  <% if @train.current_station.present? %>
      <%= link_to @train.current_station.title, @train.current_station %>
  <% else %>
      not set
  <% end %>
</p>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
