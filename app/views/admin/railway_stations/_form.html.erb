<%= render 'common/errors', resource: railway_station %>

<div class="row">
  <div class="col-sm-6">
    <%= form_for [:admin, railway_station] do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit t('.submit', action: railway_station.new_record? ? 'Создать' : 'Изменить'),
                       class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>
