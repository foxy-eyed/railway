<%= form_for [:admin, @train, wagon.becomes(Wagon)] do |f| %>
    <%= render 'common/errors', resource: wagon %>

    <% f.object = wagon.becomes(wagon.class) %>

    <div class="field">
      <%= f.label :type %>
      <%= f.select :type, Wagon.types %>
    </div>

    <div class="field">
      <%= f.label :top_places %>
      <%= f.text_field :top_places %>
    </div>

    <div class="field">
      <%= f.label :bottom_places %>
      <%= f.text_field :bottom_places %>
    </div>

    <div class="field">
      <%= f.label :side_top_places %>
      <%= f.text_field :side_top_places %>
    </div>

    <div class="field">
      <%= f.label :side_bottom_places %>
      <%= f.text_field :side_bottom_places %>
    </div>

    <div class="field">
      <%= f.label :seats %>
      <%= f.text_field :seats %>
    </div>

    <div class="actions">
      <%= f.submit t('.submit', action: wagon.new_record? ? 'Создать' : 'Изменить') %>
    </div>
<% end %>
