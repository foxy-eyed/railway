<%= render 'common/errors', resource: wagon %>

<div class="row">
  <div class="col-sm-6">
    <%= form_for [:admin, @train, wagon.becomes(Wagon)] do |f| %>
        <% f.object = wagon.becomes(wagon.class) %>

        <div class="form-group">
          <%= f.label :type %>
          <%= f.select :type, Wagon.types, {}, class: 'form-control' %>
        </div>

        <div class="form-group wagon-place" rel="CoupeWagon|EconomyWagon">
          <%= f.label :top_places %>
          <%= f.text_field :top_places, class: 'form-control' %>
        </div>

        <div class="form-group wagon-place" rel="CoupeWagon|EconomyWagon|LuxWagon">
          <%= f.label :bottom_places %>
          <%= f.text_field :bottom_places, class: 'form-control' %>
        </div>

        <div class="form-group wagon-place" rel="EconomyWagon">
          <%= f.label :side_top_places %>
          <%= f.text_field :side_top_places, class: 'form-control' %>
        </div>

        <div class="form-group wagon-place" rel="EconomyWagon">
          <%= f.label :side_bottom_places %>
          <%= f.text_field :side_bottom_places, class: 'form-control' %>
        </div>

        <div class="form-group wagon-place" rel="SittingWagon">
          <%= f.label :seats %>
          <%= f.text_field :seats, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit t('.submit', action: wagon.new_record? ? 'Создать' : 'Изменить'),
                       class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>
