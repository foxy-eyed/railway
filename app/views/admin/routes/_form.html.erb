<%= render 'common/errors', resource: route %>

<div class="row">
  <div class="col-sm-6">
    <%= form_for [:admin, route] do |f| %>
        <div class="form-group">
          <%= f.label :railway_station_ids %>
          <%= f.collection_select :railway_station_ids, RailwayStation.all.ordered_by_title, :id, :title,
                                  {}, {class: 'form-control', multiple: true} %>
        </div>

        <div class="actions">
          <%= f.submit t('.submit', action: route.new_record? ? 'Создать' : 'Изменить'),
                       class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>
